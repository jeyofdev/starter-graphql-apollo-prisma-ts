		"pre-commit": "npm run lint"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"prettier --write",
			"eslint --max-warnings=0"
		],
		"*.{js,md,json}": "prettier --cache --write"
	},
	"dependencies": {
		"@apollo/server": "^4.6.0",
		"graphql": "^16.6.0",
		"ts-node": "^10.9.1"
